<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <Button
            android:layout_width="41dp"
            android:layout_height="46dp" android:id="@+id/button2"
            tools:layout_editor_absoluteX="43dp" tools:text="+" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="255dp"
            android:layout_height="25dp" android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="50dp"
            tools:text="digte um numero"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp" tools:text="CALCULADORA"/>
    <TextView
            android:layout_width="254dp"
            android:layout_height="28dp" android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:text="digte um numero" app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="41dp"
            android:layout_height="46dp" android:id="@+id/button"
            tools:layout_editor_absoluteX="125dp" tools:text="-" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="24dp"/>
    <Button
            android:layout_width="41dp"
            android:layout_height="46dp" android:id="@+id/button3"
            tools:layout_editor_absoluteX="225dp" tools:text="/" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="24dp"/>
    <Button
            android:layout_width="41dp"
            android:layout_height="46dp" android:id="@+id/button4"
            tools:layout_editor_absoluteX="313dp" tools:text="*" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="37dp"
            android:layout_height="26dp" android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp" tools:text="operação"/>
    <TextView
            android:layout_width="270dp"
            android:layout_height="102dp" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:text="resultado"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" android:layout_marginTop="40dp"/>
    <ImageButton
            android:src="@drawable/calculadora"
            android:layout_width="89dp"
            android:layout_height="75dp" android:id="@+id/imageButton"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>