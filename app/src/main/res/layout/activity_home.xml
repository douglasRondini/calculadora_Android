<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content" android:id="@+id/edit_number_1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="50dp"
            tools:text="digte um numero" android:hint="@string/hint_number_1" android:height="40dp"
            android:inputType="number"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp" tools:text="CALCULADORA"
            android:text="CALCULADORA"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="wrap_content" android:id="@+id/edit_number_2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_view1"
            tools:text="digte um numero" app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="10dp"
            android:inputType="number" android:hint="@string/hint_number_2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_view1"
            app:layout_constraintTop_toBottomOf="@+id/edit_number_1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp" tools:text="operação"/>
    <TextView
            android:layout_width="270dp"
            android:layout_height="102dp" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" tools:text="resultado"
            app:layout_constraintTop_toBottomOf="@+id/btn_calcultate" android:layout_marginTop="40dp"/>
    <ImageButton
            android:src="@drawable/calculadora"
            android:layout_width="89dp"
            android:layout_height="75dp" android:id="@+id/btn_calcultate"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_number_2"
            app:layout_constraintStart_toStartOf="@+id/edit_number_2"
            app:layout_constraintEnd_toEndOf="@+id/edit_number_2" android:id="@+id/linearLayout">
        <Button
                android:layout_width="41dp"
                android:layout_height="46dp" android:id="@+id/btn_sum"
                tools:text="+"
                android:text="+"/>
        <Button
                android:layout_width="41dp"
                android:layout_height="46dp" android:id="@+id/btn_minus"
                tools:text="-"
                android:text="-"/>
        <Button
                android:layout_width="41dp"
                android:layout_height="46dp" android:id="@+id/btn_divider"
                tools:text="/"
                android:text="/"/>
        <Button
                android:layout_width="41dp"
                android:layout_height="46dp"
                tools:text="*"
                android:id="@+id/btn_multip" android:text="*"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>